<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:Scores.PageModels"
    x:Class="Scores.Pages.MainPage">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="16">

                <Label 
                    Text="CFP Rankings"
                    FontSize="32"
                    FontAttributes="Bold"
                    HorizontalOptions="Center" />

                <!-- Card-style list -->
                <CollectionView
                    ItemsSource="{Binding CfpTeams}"
                    SelectionMode="None"
                    Margin="0,10">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame
                                Margin="0,8"
                                Padding="16"
                                BorderColor="#DDDDDD"
                                BackgroundColor="White"
                                CornerRadius="12"
                                HasShadow="True">

                                <Grid ColumnDefinitions="50, *, 70" RowDefinitions="Auto, Auto" ColumnSpacing="12">
                                    <Label 
                                        Text="{Binding Rank}" 
                                        FontSize="28"
                                        FontAttributes="Bold"
                                        Grid.RowSpan="2"
                                        VerticalTextAlignment="Center"
                                        HorizontalTextAlignment="Center" />

                                    <Label 
                                        Text="{Binding Team}"
                                        FontSize="20"
                                        FontAttributes="Bold"
                                        Grid.Column="1" />

                                    <Label 
                                        Text="{Binding Record}"
                                        FontSize="16"
                                        TextColor="Gray"
                                        Grid.Column="1"
                                        Grid.Row="1" />

                                    <Image
                                        Grid.Column="2"
                                        Grid.RowSpan="2"
                                        Aspect="AspectFit"
                                        HeightRequest="50"
                                        WidthRequest="50"
                                        Source="{Binding LogoUrl}" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
